<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/background"
        tools:context=".MainActivity"
        android:padding="10dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:padding="10dp"
        android:text="Event Planner"
        android:textColor="#C71585"
        android:textSize="28sp"
        android:textStyle="bold" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/selectImage"
        android:scaleType="centerCrop"
        android:src="@drawable/eventplanner"
        android:contentDescription="Select Image"
        android:background="@android:color/transparent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: Not selected"
        android:id="@+id/tvSelectedDate"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#C71585"
        android:layout_marginTop="15dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSelectDate"
        android:text="Pick Date"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:backgroundTint="#C71585"
        android:textColor="#fff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventType"
        android:text="Select event type"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="#C71585"
        android:layout_marginBottom="10dp"/>

    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroupEvent"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioBtnWedding"
                android:text="Wedding"
                android:textStyle="bold"
                android:textColor="#C71585"
                android:layout_marginEnd="10dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioBtnBirthday"
                android:text="Birthday"
                android:textColor="#C71585"
                android:textStyle="bold"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addServices"
        android:text="Select additional services"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="#C71585"
        android:layout_marginBottom="10sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Catering"
            android:id="@+id/catering"
            android:textColor="#C71585"
            android:buttonTint="#C71585"
            android:textStyle="bold">
        </CheckBox>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photography"
            android:id="@+id/photography"
            android:textColor="#C71585"
            android:buttonTint="#C71585"
            android:textStyle="bold"
            android:layout_marginLeft="10dp">
        </CheckBox>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Live Music"
            android:id="@+id/liveMusic"
            android:textColor="#C71585"
            android:buttonTint="#C71585"
            android:textStyle="bold"
            android:layout_marginLeft="10dp">
        </CheckBox>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSubmit"
        android:text="Submit"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:backgroundTint="#C71585"
        android:textColor="#fff" />
</LinearLayout>